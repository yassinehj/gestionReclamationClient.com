{% extends "GrcReclamationBundle::base.html.twig" %}
 {% block body %}
     {{parent()}} 
 {% endblock %}
     {% block admin %} 
 
  
    
    <center><h1> Liste des Commentaires </h1></center>
    <br><br>
<div>
<table id="datatable-checkbox" class="table table-striped table-bordered bulk_action">
            <tr>  
               
                <td>Utilisateur</td>
                <td>Commentaire</td>
                <td>Actions</td>
            </tr>
      
        {% for entity in entities %}
            
            <tr >
                
                <td>{{ entity.user }}</td>
                <td>{{ entity.commentaire }}</td>
                
                <td>
                <a href="{{path('commentaire_delete',{'id':entity.id})}}">Supprimer</a>
               </td>
      
            </tr>
        {% endfor %}
       
    </table>
</div>
    
    {% endblock %} 


